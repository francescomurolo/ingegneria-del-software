<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.AdminEmployeesViewController">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Employees">
                    <font>
                        <Font size="38.0" />
                    </font>
            </Text>
                <HBox alignment="CENTER">
                    <children>
                  <AnchorPane prefWidth="400.0">
                     <children>
                              <Button fx:id="backButton" mnemonicParsing="false" text="Back" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefWidth="400.0">
                     <children>
                        <Button fx:id="createButton" mnemonicParsing="false" style="-fx-background-color: lightgreen;" text="New Employee" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
                    </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </HBox>
                <TableView fx:id="employeeTable" prefHeight="500.0" prefWidth="800.0">
                    <columns>
                        <TableColumn fx:id="nameColumn" maxWidth="215.0" minWidth="215.0" prefWidth="215.0" resizable="false" text="Name" />
                        <TableColumn fx:id="surnameColumn" maxWidth="195.0" minWidth="195.0" prefWidth="195.0" resizable="false" text="Surname" />
                        <TableColumn fx:id="emailColumn" maxWidth="195.0" minWidth="195.0" prefWidth="195.0" resizable="false" text="Email" />
                        <TableColumn fx:id="passwordColumn" maxWidth="260.0" minWidth="195.0" prefWidth="195.0" resizable="false" text="Password" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
